---
// src/layouts/Layout.astro
import '../styles/global.css';
import OrgSwitcher from '../components/dashboard/OrgSwitcher.astro';

const { title, description, orgId = 'default-org' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark bg-zinc-950 text-zinc-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | SignalQL` : 'SignalQL'}</title>
    <meta name="description" content={description} />
  </head>
  <body class="antialiased min-h-screen flex flex-col font-sans selection:bg-blue-500/30">
    <header class="border-b border-zinc-800 sticky top-0 bg-zinc-950/80 backdrop-blur-md z-50">
      <nav class="w-full px-6 h-14 flex items-center justify-between">
        <a href={`/signals`} class="font-bold tracking-tighter text-lg flex items-center gap-2">
          <span class="w-5 h-5 bg-zinc-100 rounded-md shadow-[0_0_10px_rgba(255,255,255,0.2)]"></span>
          SignalQL
        </a>        
      <div class="flex items-center gap-4">
        <span id="org-badge" class="text-[10px] text-zinc-600 font-mono bg-zinc-900 px-2 py-0.5 rounded border border-zinc-800 hidden sm:block uppercase">
          ID: {orgId.substring(0,8)}
        </span>
        <div class="h-4 w-[1px] bg-zinc-800 mx-2"></div>
        <a href="/docs" class="text-xs font-medium text-zinc-400 hover:text-zinc-100 transition-colors uppercase tracking-widest">Docs</a>
        
        <div class="relative inline-block text-left" id="user-menu-container">
          <button 
            id="user-profile-btn" 
            class="w-8 h-8 rounded-full bg-zinc-900 border border-zinc-800 flex items-center justify-center overflow-hidden transition-all hover:border-zinc-500 focus:outline-none"
          >
            <span class="text-[10px] font-bold text-zinc-400">JD</span>
          </button>

          <div 
            id="user-dropdown" 
            class="hidden absolute right-0 mt-2 w-48 origin-top-right bg-zinc-950 border border-zinc-800 rounded-xl shadow-2xl z-[60] py-1"
          >
            <div class="px-4 py-2 border-b border-zinc-900 mb-1">
              <p class="text-[10px] font-bold text-zinc-500 uppercase tracking-widest">Account</p>
              <p id="user-email-display" class="text-[11px] text-zinc-400 truncate font-mono">user@signalql.io</p>
            </div>

            <a href="/profile" class="flex items-center gap-2 px-4 py-2 text-[11px] font-bold uppercase tracking-tight text-zinc-400 hover:bg-zinc-900 hover:text-zinc-100 transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Profile
            </a>

            <button 
              id="btn-logout" 
              class="w-full flex items-center gap-2 px-4 py-2 text-[11px] font-bold uppercase tracking-tight text-red-500/80 hover:bg-red-500/5 hover:text-red-400 transition-all text-left"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Sign Out
            </button>
          </div>
        </div>
      </div>
      </nav>
    </header>

    <div class="flex flex-1">
      <aside class="w-14 md:w-56 border-r border-zinc-900 flex flex-col bg-zinc-950 transition-all duration-300">
        <div class="py-6 flex-1 flex flex-col">
          
          <div class="hidden md:block">
            <OrgSwitcher />
          </div>

          <nav class="px-3 space-y-1" id="dynamic-sidebar-nav"></nav>
        </div>

        <div class="p-4 border-t border-zinc-900">
          <a href="/settings" class="flex items-center gap-3 px-3 py-2 rounded-lg text-zinc-600 hover:text-zinc-100 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
            </svg>
            <span class="text-[10px] font-bold uppercase tracking-widest hidden md:block">Settings</span>
          </a>
        </div>
      </aside>

      <main class="flex-1 w-full overflow-x-hidden bg-[#0a0a0a]">
        <div class="p-6 md:p-10">
          <slot />
        </div>
      </main>
    </div>

    <script>
      // Расширяем интерфейс Window для TypeScript
      declare global {
        interface Window {
          __USER_CONTEXT__: any;
        }
      }

      // 1. Быстрая проверка токена
      const token = localStorage.getItem('signalql_token');
      if (!token && window.location.pathname !== '/login') {
        window.location.href = '/login';
      }

      // 2. Конфигурация меню
      const menuConfig = [
        { id: 'signals', name: 'Signals', path: '/signals', icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
        { id: 'repos', name: 'Repositories', path: '/repositories', icon: 'M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z' },
        { id: 'users', name: 'Users', path: '/users', icon: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197' }
      ];

      // 3. Функция загрузки контекста (ОДИН ВЫЗОВ НА ВСЕ КОМПОНЕНТЫ)
      async function fetchUserContext() {
        if (window.__USER_CONTEXT__) return window.__USER_CONTEXT__;
        
        const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:8080';
        try {
          const res = await fetch(`${API_URL}/me`, {
            headers: { 
              'Authorization': `Bearer ${token}`,
              'ngrok-skip-browser-warning': 'true' 
            }
            
          });
          
          if (res.status === 401) {
             localStorage.removeItem('signalql_token');
             window.location.href = '/login';
             return null;
          }

          if (res.ok) {
            const data = await res.json();
            window.__USER_CONTEXT__ = data;
            // Уведомляем другие компоненты (например, OrgSwitcher)
            window.dispatchEvent(new CustomEvent('user-context-loaded', { detail: data }));
            return data;
          }
        } catch (e) {
          console.error("Failed to fetch context", e);
        }
        return null;
      }

      function renderSidebar() {
        const navContainer = document.getElementById('dynamic-sidebar-nav');
        if (!navContainer) return;
        
        const params = new URLSearchParams(window.location.search);
        const orgId = params.get('org_id');
        const currentPath = window.location.pathname;

        navContainer.innerHTML = menuConfig.map(item => {
          // Сохраняем org_id в ссылках
          const fullPath = orgId ? `${item.path}?org_id=${orgId}` : item.path;
          const isActive = currentPath.startsWith(item.path);
          
          return `
            <a href="${fullPath}" 
              class="nav-link flex items-center gap-3 px-3 py-2 rounded-lg transition-all group ${isActive ? 'bg-blue-500/10 text-blue-500' : 'text-zinc-500 hover:text-zinc-200'}">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${item.icon}" />
              </svg>
              <span class="text-xs font-bold uppercase tracking-widest hidden md:block">${item.name}</span>
            </a>
          `;
        }).join('');
      }
      /**
       * Manages the user dropdown menu visibility and actions
       */
      function setupUserMenu() {
        const container = document.getElementById('user-menu-container');
        const btn = document.getElementById('user-profile-btn');
        const dropdown = document.getElementById('user-dropdown');
        const logoutBtn = document.getElementById('btn-logout');

        if (!btn || !dropdown) return;

        // Toggle menu on avatar click
        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          dropdown.classList.toggle('hidden');
        });

        // Close menu when clicking anywhere else
        document.addEventListener('click', (e) => {
          if (!container.contains(e.target as Node)) {
            dropdown.classList.add('hidden');
          }
        });

        // Logout logic
        logoutBtn?.addEventListener('click', () => {
          localStorage.removeItem('signalql_token');
          window.location.replace('/login');
        });
      }
      /**
       * Updates user information in the dropdown from context
       */
      function updateDropdownUserInfo(data) {
        const emailDisplay = document.getElementById('user-email-display');
        if (emailDisplay && data.user?.email) {
          emailDisplay.textContent = data.user.email;
        }
      }

      async function updateUI() {
        const data = await fetchUserContext();
        if (!data) return;
        
        updateDropdownUserInfo(data); // Add this call
        
        // Обновляем аватарку
        const userBtn = document.getElementById('user-profile-btn');
        if (userBtn && data.user) {
          if (data.user.avatar_url) {
            // Просто заменяем всё внутри кнопки на картинку
            userBtn.innerHTML = `<img src="${data.user.avatar_url}" alt="Profile" class="w-full h-full object-cover" />`;
          } else {
            const initials = data.user.display_name ? data.user.display_name.substring(0,2).toUpperCase() : 'U';
            userBtn.innerHTML = `<span class="text-[10px] font-bold text-zinc-100">${initials}</span>`;
          }
        }
                // Обновляем бейдж организации в хедере
        const params = new URLSearchParams(window.location.search);
        const orgId = params.get('org_id');
        const orgBadge = document.getElementById('org-badge');
        if (orgBadge && orgId) {
          orgBadge.textContent = `ORG: ${orgId.substring(0,8)}`;
        }
      }



      // Инициализация
      renderSidebar();
      updateUI();
      setupUserMenu();

      // Поддержка View Transitions
      document.addEventListener('astro:after-swap', () => {
        renderSidebar();
        updateUI();
        setupUserMenu();        
      });
    </script>
  </body>
</html>