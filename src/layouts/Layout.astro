---
import '../styles/global.css';
// Принимаем orgId как пропс, чтобы ссылки работали корректно
const { title, description, orgId = 'default-org' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark bg-zinc-950 text-zinc-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | SignalQL` : 'SignalQL'}</title>
    <meta name="description" content={description} />
  </head>
  <body class="antialiased min-h-screen flex flex-col font-sans selection:bg-blue-500/30">
    <header class="border-b border-zinc-800 sticky top-0 bg-zinc-950/80 backdrop-blur-md z-50">
      <nav class="w-full px-6 h-14 flex items-center justify-between">
        <a href={`/org/signals`} class="font-bold tracking-tighter text-lg flex items-center gap-2">
          <span class="w-5 h-5 bg-zinc-100 rounded-md shadow-[0_0_10px_rgba(255,255,255,0.2)]"></span>
          SignalQL
        </a>
        <div class="flex items-center gap-4">
          <span class="text-[10px] text-zinc-600 font-mono bg-zinc-900 px-2 py-0.5 rounded border border-zinc-800">
            ORG: {orgId.substring(0,8)}
          </span>
          <div class="h-4 w-[1px] bg-zinc-800 mx-2"></div>
          <a href="/docs" class="text-xs font-medium text-zinc-400 hover:text-zinc-100 transition-colors uppercase tracking-widest">Docs</a>
          <button class="w-8 h-8 rounded-full bg-zinc-900 border border-zinc-800 flex items-center justify-center">
            <span class="text-[10px] font-bold">JD</span>
          </button>
        </div>
      </nav>
    </header>
    <script>   
    const token = localStorage.getItem('signalql_token');
    
    // If there is no token — immediate redirect to login
    if (!token) {
      window.location.href = '/login';
    }
    </script>
    <div class="flex flex-1">
      <aside class="w-14 md:w-56 border-r border-zinc-900 flex flex-col bg-zinc-950 transition-all duration-300">
      <nav class="flex-1 px-3 py-6 space-y-1" id="dynamic-sidebar-nav">
      </nav>
          <div class="p-4 border-t border-zinc-900">
           <a href=`/settings` class="flex items-center gap-3 px-3 py-2 rounded-lg text-zinc-600 hover:text-zinc-100 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
            </svg>
            <span class="text-[10px] font-bold uppercase tracking-widest hidden md:block">Settings</span>
          </a>
        </div>
      </aside>

      <main class="flex-1 w-full overflow-x-hidden bg-[#0a0a0a]">
        <div class="p-6 md:p-10">
          <slot />
        </div>
      </main>
    </div>
    <script>
      // 1. Конфигурация меню (можно подгружать через fetch, если нужно)
      const menuConfig = [
        { id: 'signals', name: 'Signals', path: '/signals', icon: 'M13 10V3L4 14h7v7l9-11h-7z' },
        { id: 'repos', name: 'Repositories', path: '/repositories', icon: 'M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z' },
        { id: 'users', name: 'Users', path: '/users', icon: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197' }
      ];
      const params = new URLSearchParams(window.location.search);
      const orgId = params.get('org_id');

      function renderSidebar() {
        const navContainer = document.getElementById('dynamic-sidebar-nav');
        if (!navContainer) return;
        
        const pathParts = window.location.pathname.split('/');                
        
        const urlParams = orgId ? `?org_id=${orgId}` : '';
        const currentPath = window.location.pathname;

        navContainer.innerHTML = menuConfig.map(item => {
          const fullPath = `${item.path}${urlParams}`;
          const isActive = currentPath.startsWith(fullPath);
          
          return `
            <a href="${fullPath}" 
              class="nav-link flex items-center gap-3 px-3 py-2 rounded-lg transition-all group ${isActive ? 'active' : ''}">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ${isActive ? 'text-blue-500' : ''}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${item.icon}" />
              </svg>
              <span class="text-xs font-bold uppercase tracking-widest hidden md:block">
                ${item.name}
              </span>
            </a>
          `;
        }).join('');
      }

      // Запускаем при загрузке
      renderSidebar();

      // Если ты используешь View Transitions в Astro, добавь это:
      document.addEventListener('astro:after-swap', renderSidebar);
    </script>
  </body>
</html>