---
import Layout from '../layouts/Layout.astro';

// Временная заглушка данных
const users = [
  { name: 'John Doe', role: 'Admin', status: 'Active', lastActive: '2h ago' },
  { name: 'System Worker', role: 'Bot', status: 'Online', lastActive: 'Now' },
];
---

<Layout title="Users" >
  <div class="w-full">
    <header class="mb-8 flex justify-between items-end">
      <div>
        <h1 class="text-2xl font-bold uppercase tracking-tight text-zinc-100">Team Management</h1>
        <p class="text-sm text-zinc-500 font-mono">Manage access for </p>
      </div>
      <button class="px-4 py-2 bg-zinc-100 text-zinc-900 text-[10px] font-bold uppercase rounded hover:bg-white transition-colors">
        Invite Member
      </button>
    </header>

    <div class="border border-zinc-900 rounded-xl overflow-hidden bg-zinc-950">
      <table class="w-full text-left font-mono text-[11px]">
        <thead class="bg-zinc-900/50 text-zinc-500 uppercase">
          <tr>
            <th class="px-6 py-4 font-bold">User</th>
            <th class="px-6 py-4 font-bold">Role</th>
            <th class="px-6 py-4 font-bold">Status</th>
            <th class="px-6 py-4 font-bold">Last Activity</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-zinc-900">
          {users.map(user => (
            <tr class="hover:bg-zinc-900/30 transition-colors">
              <td class="px-6 py-4 text-zinc-200 font-bold uppercase">{user.name}</td>
              <td class="px-6 py-4 text-zinc-400">{user.role}</td>
              <td class="px-6 py-4">
                <span class="px-2 py-0.5 rounded border border-green-500/20 bg-green-500/10 text-green-500 text-[9px] uppercase">
                  {user.status}
                </span>
              </td>
              <td class="px-6 py-4 text-zinc-500">{user.lastActive}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</Layout>