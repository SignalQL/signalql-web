---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Security Signals | SignalQL">
  <main class="p-8 max-w-7xl mx-auto text-white">
    <header class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold mb-1 tracking-tight">Security Signals</h1>
        <p class="text-slate-400 text-sm italic">Real-time threat monitoring and triage.</p>
      </div>
      <div class="flex gap-2">
        <div class="bg-slate-900 border border-slate-800 rounded-lg px-4 py-2 min-w-[110px]">
          <div class="text-[9px] font-bold text-slate-500 uppercase tracking-widest mb-1">Total Open</div>
          <div id="total-signals" class="text-lg font-mono font-bold text-blue-400">0</div>
        </div>
        <div class="bg-slate-900 border border-red-900/30 rounded-lg px-4 py-2 min-w-[110px]">
          <div class="text-[9px] font-bold text-red-500/70 uppercase tracking-widest mb-1">Critical</div>
          <div id="critical-signals" class="text-lg font-mono font-bold text-red-600">0</div>
        </div>
      </div>
    </header>

    <div class="mb-6 flex flex-col gap-4">
      <div class="flex flex-col md:flex-row gap-3 items-center justify-between">
        <div class="relative flex-1 w-full">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-4 w-4 text-slate-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input 
            type="text" 
            id="signal-search" 
            placeholder="SEARCH BY TEXT OR KEYWORDS (repo: status: severity:)..." 
            class="block w-full pl-10 pr-3 py-2.5 bg-slate-950 border border-slate-800 rounded-lg text-xs font-mono text-slate-200 placeholder-slate-600 focus:outline-none focus:border-blue-500/50 transition-all tracking-tight"
          />
        </div>

        <div class="flex items-center gap-2 w-full md:w-auto">
          <button 
            id="btn-search-execute" 
            class="flex-1 md:flex-none px-6 py-2.5 bg-blue-600 hover:bg-blue-500 text-white text-[10px] font-bold uppercase tracking-widest rounded-lg transition-all active:scale-95 shadow-[0_0_15px_rgba(37,99,235,0.2)]"
          >
            Search
          </button>
          <button id="btn-clear" class="px-4 py-2.5 text-[10px] font-bold uppercase rounded-lg border border-slate-700 bg-slate-800 text-slate-400 hover:text-white transition-all">
            Reset
          </button>
        </div>
      </div>

      <div class="flex flex-wrap gap-x-4 gap-y-2 px-1">
        <span class="text-[9px] text-slate-600 font-mono uppercase tracking-widest">Syntax:</span>
        <button class="text-[9px] text-slate-500 hover:text-blue-400 font-mono" onclick="const i = document.getElementById('signal-search'); i.value += 'repo:'; i.focus()">repo:name</button>
        <button class="text-[9px] text-slate-500 hover:text-blue-400 font-mono" onclick="const i = document.getElementById('signal-search'); i.value += 'severity:critical '; i.focus()">severity:critical</button>
        <button class="text-[9px] text-slate-500 hover:text-blue-400 font-mono" onclick="const i = document.getElementById('signal-search'); i.value += 'status:open '; i.focus()">status:open</button>
      </div>
    </div>

    <div class="bg-slate-950 border border-slate-800 rounded-lg shadow-2xl overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse table-fixed">
          <thead class="bg-slate-900/80 text-slate-500 text-[10px] font-bold uppercase tracking-wider">
            <tr>
              <th class="w-[70px] py-3 px-2 border-b border-slate-800 text-center">Sev</th>
              <th class="py-3 px-4 border-b border-slate-800">Signal Description</th>
              <th class="w-[130px] py-3 px-4 border-b border-slate-800">Source / Link</th>
              <th class="w-[100px] py-3 px-4 border-b border-slate-800">Timestamp</th>
              <th class="w-[60px] py-3 px-4 border-b border-slate-800 text-right">Det.</th>
            </tr>
          </thead>          
          <tbody id="signals-table-body" class="divide-y divide-slate-900 font-mono italic-none">
            </tbody>
        </table>
      </div>

      <div id="table-loader" class="py-20 text-center border-t border-slate-900">
        <div class="inline-block w-4 h-4 border border-blue-500 border-t-transparent animate-spin mb-2"></div>
        <p class="text-[10px] uppercase tracking-widest text-slate-600">Fetching Data...</p>
      </div>
      
      <div id="empty-state" class="hidden py-20 text-center">
        <p class="text-xs uppercase tracking-widest text-slate-600 font-mono">// NO THREATS DETECTED</p>
      </div>
    </div>

    <dialog id="signal-dialog" class="bg-transparent backdrop:bg-slate-950/80 p-0 m-auto w-full max-w-3xl border-none outline-none">
      <div class="bg-slate-950 border border-slate-800 rounded-xl shadow-2xl p-0 overflow-hidden font-mono">
        <div class="p-6 border-b border-slate-900 flex justify-between items-start">
          <div id="dialog-header-content">
            </div>
          <button id="close-dialog" class="text-slate-500 hover:text-white transition-colors text-2xl">&times;</button>
        </div>

        <div class="p-8 max-h-[70vh] overflow-y-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8" id="dialog-body-content">
            </div>
        </div>

        <div class="p-6 border-t border-slate-900 flex justify-end gap-3 bg-slate-900/20">              
          <button id="cancel-dialog" class="px-4 py-2 text-[10px] font-bold uppercase border border-slate-800 text-slate-400 hover:bg-slate-900 rounded transition-all">Close</button>
        </div>
      </div>
    </dialog>

  </main>
</Layout>

<script>
  import { renderSignalRow } from '../utils/renderSignal';
  import { SeverityColors } from '../utils/constants';

  // Состояние
  let allSignals = [];
  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:8080';

  // Элементы UI
  const ui = {
    tbody: document.getElementById('signals-table-body'),
    loader: document.getElementById('table-loader'),
    emptyState: document.getElementById('empty-state'),
    searchInput: document.getElementById('signal-search') as HTMLInputElement,
    totalCount: document.getElementById('total-signals'),
    criticalCount: document.getElementById('critical-signals'),
    dialog: document.getElementById('signal-dialog') as HTMLDialogElement,
    headerContent: document.getElementById('dialog-header-content'),
    bodyContent: document.getElementById('dialog-body-content'),
  };

  // Универсальный fetch с авторизацией
  async function secureFetch(endpoint) {
    const token = localStorage.getItem('signalql_token');
    const res = await fetch(`${API_URL}${endpoint}`, {
      headers: {
        'Authorization': `Bearer ${token}`,
        'ngrok-skip-browser-warning': 'true'
      }
    });
    if (res.status === 401) window.location.href = '/login';
    if (!res.ok) throw new Error('API Error');
    return res.json();
  }

  // Загрузка данных
  // Измени функцию загрузки, чтобы она принимала строку поиска
  async function initSignals(query = '') {
    const params = new URLSearchParams(window.location.search);
    const orgId = params.get('org_id');
    
    if (!orgId) return;

    // Показываем лоадер перед запросом
    ui.loader.classList.remove('hidden');
    ui.tbody.innerHTML = '';

    try {
      // Формируем URL с учетом поиска
      let endpoint = `/api/organizations/${orgId}/signals`;
      if (query) {
        endpoint += `?search_query=${encodeURIComponent(query)}`;
      }

      allSignals = await secureFetch(endpoint);
      renderTable(allSignals);
    } catch (err) {
      ui.loader.innerHTML = `<p class="text-red-500 font-mono text-[10px]">FAILED TO FETCH SIGNALS</p>`;
    }
  }

  // Находим новую кнопку поиска
  const btnSearch = document.getElementById('btn-search-execute');

  // Слушатель для кнопки Search
  btnSearch?.addEventListener('click', () => {
    initSignals(ui.searchInput.value);
  });

  // Слушатель для Enter в поле ввода
  ui.searchInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      initSignals(ui.searchInput.value);
    }
  });

  // Обновляем Reset
  document.getElementById('btn-clear')?.addEventListener('click', () => {
    ui.searchInput.value = '';
    initSignals('');
  });



  function renderTable(data) {
    ui.loader.classList.add('hidden');
    if (data.length === 0) {
      ui.tbody.innerHTML = '';
      ui.emptyState.classList.remove('hidden');
    } else {
      ui.emptyState.classList.add('hidden');
      ui.tbody.innerHTML = data.map(s => renderSignalRow(s)).join('');
    }
    ui.totalCount.textContent = data.length;
    ui.criticalCount.textContent = data.filter(s => s.severity === 'CRITICAL').length;
  }

  // Глобальная функция для деталей (вызывается из renderSignalRow)
window.openSignalDetails = async (id) => {
    const signal = allSignals.find(s => s.id === id);
    if (!signal) return;

    // 1. Сначала отрисовываем статику (заголовок и инфу об алерте)
    renderDialogStatic(signal);
    ui.dialog.showModal();

    // 2. Очищаем контейнер таймлайна и ставим лоадер
    const container = document.getElementById('timeline-container');
    if (container) {
      container.innerHTML = `
        <div class="animate-pulse flex space-x-2">
          <div class="h-2 bg-zinc-800 rounded w-full"></div>
        </div>`;
    }

    try {
      // ВАЖНО: Проверь путь! Если в API_URL уже есть /api, то пиши просто /signals/...
      const history = await secureFetch(`/api/signals/${id}/history`);
      
      console.log("DEBUG: History received:", history); // Посмотри в консоль F12
      
      renderTimeline(history);
    } catch (e) {
      console.error("History load error:", e);
      if (container) {
        container.innerHTML = `<p class="text-[9px] text-red-500 font-mono">ERR: FAILED TO LOAD HISTORY TRAIL</p>`;
      }
    }
  };

  // Вспомогательные функции рендеринга модалки
  function renderDialogStatic(signal) {
    const sev = (signal.severity || 'INFO').toUpperCase();
    const colorClass = SeverityColors[sev] || SeverityColors.INFO;

    // 1. Заголовок
    ui.headerContent.innerHTML = `
      <div class="flex items-center gap-3 mb-2">
        <span class="text-[9px] font-bold px-2 py-0.5 rounded border ${colorClass} uppercase tracking-widest">${sev}</span>
        <span class="text-[9px] text-slate-600">ID: ${signal.id}</span>
      </div>
      <h2 class="text-xl font-bold text-slate-100 tracking-tight">${signal.title}</h2>
    `;

    // 2. Тело (Каркас)
    ui.bodyContent.innerHTML = `
      <div class="col-span-1 space-y-6">
        <div>
          <h3 class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-2">Location</h3>
          <p class="text-xs text-slate-300 bg-slate-900 p-2 rounded border border-slate-800 truncate">${signal.file_path}:L${signal.line_start}</p>
        </div>
        <div>
          <h3 class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-2">Details</h3>
          <div class="bg-slate-900/50 p-3 rounded border border-slate-800 space-y-2">
              <div class="flex justify-between text-[10px]"><span class="text-slate-500 uppercase">Provider</span><span class="text-slate-200">${signal.provider}</span></div>
              <div class="flex justify-between text-[10px]"><span class="text-slate-500 uppercase">Scanner</span><span class="text-slate-200">${signal.signal_type}</span></div>
              <div class="flex justify-between text-[10px]">
                  <span class="text-slate-500 uppercase">External URL</span>
                  <a href="${signal.html_url}" target="_blank" class="text-blue-500 hover:text-blue-400 font-bold underline underline-offset-4">GITHUB ↗</a>
              </div>
          </div>
        </div>
        <div>
          <h3 class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-2">Metadata</h3>
          <pre class="text-[9px] text-blue-400/80 bg-slate-900/50 p-3 rounded border border-slate-800 max-h-[150px] overflow-auto font-mono">${JSON.stringify(signal.metadata || {}, null, 2)}</pre>
        </div>
      </div>

      <div class="col-span-1 space-y-4">
        <h3 class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-2">Activity Timeline</h3>
        <div id="timeline-container" class="relative border-l border-slate-800 ml-2 pl-4 space-y-6 mt-4">
          <div class="animate-pulse flex space-x-2">
            <div class="h-2 bg-slate-800 rounded w-full"></div>
          </div>
        </div>
      </div>
    `;
  }

function renderTimeline(history) {
    const container = document.getElementById('timeline-container');
    if (!container) return;

    if (!history || !Array.isArray(history) || history.length === 0) {
      container.innerHTML = `<p class="text-[10px] text-zinc-600 italic">No activity history found for this signal.</p>`;
      return;
    }

    container.innerHTML = history.map((item, index) => {
      // 1. Извлекаем дату (в твоем JSON это "received_at")
      // Если по какой-то причине его нет, используем текущую дату как фоллбек
      const dateStr = item.received_at; 
      const date = dateStr 
        ? new Date(dateStr).toLocaleString('en-GB', { 
            day: '2-digit', month: 'short', hour: '2-digit', minute: '2-digit' 
          })
        : 'Unknown date';
      
      // 2. Извлекаем действие из payload. В твоем JSON это payload.action
      // Например: "updated_assignment"
      const actionRaw = item.payload?.action || 'Signal Activity';
      const actionName = actionRaw.replace(/_/g, ' ').toUpperCase();
      
      // 3. Определяем статус (опционально, если хочешь подсветить)
      const isInitial = index === history.length - 1;
      
      return `
        <div class="relative pl-6 pb-6 border-l border-zinc-800 last:pb-0">
          <div class="absolute -left-[5.5px] top-1 w-2.5 h-2.5 ${index === 0 ? 'bg-blue-500 shadow-[0_0_8px_rgba(59,130,246,0.5)]' : 'bg-zinc-800'} rounded-full border-2 border-zinc-950"></div>
          
          <div class="flex flex-col gap-1">
              <div class="flex items-center gap-2">
                <p class="text-[10px] text-zinc-200 font-bold tracking-tight">${actionName}</p>
                ${isInitial ? '<span class="text-[8px] bg-zinc-800 text-zinc-500 px-1 rounded">INIT</span>' : ''}
              </div>
              <p class="text-[9px] text-zinc-500 font-mono">${date}</p>
              
              <details class="mt-2 group">
                <summary class="text-[8px] text-zinc-600 group-hover:text-blue-400 cursor-pointer list-none font-bold uppercase tracking-widest transition-colors">
                  [+] View Data Snapshot
                </summary>
                <div class="mt-2 p-2 bg-black/40 rounded border border-zinc-800/50">
                   <pre class="text-[8px] text-zinc-400 overflow-x-auto max-h-40 font-mono">${JSON.stringify(item.payload, null, 2)}</pre>
                </div>
              </details>
          </div>
        </div>
      `;
    }).join('');
  }  
  // Фильтрация
  function handleFilter(val) {
    ui.searchInput.value = val;
    const query = val.toLowerCase();
    const filtered = allSignals.filter(s => 
      s.title.toLowerCase().includes(query) || s.severity.toLowerCase().includes(query)
    );
    renderTable(filtered);
  }

  // Listeners
  ui.searchInput?.addEventListener('input', (e) => handleFilter((e.target as HTMLInputElement).value));
  document.getElementById('btn-clear')?.addEventListener('click', () => handleFilter(''));
  
  // Закрытие диалога
  ui.dialog?.addEventListener('click', (e) => e.target === ui.dialog && ui.dialog.close());
  document.getElementById('close-dialog')?.addEventListener('click', () => ui.dialog.close());

  // Запуск
  initSignals();
</script>