---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Settings">
  <div class="max-w-2xl">
    <header class="mb-10">
      <h1 class="text-2xl font-bold uppercase tracking-tight text-zinc-100 mb-2">Organization Settings</h1>
      <p class="text-sm text-zinc-500 font-mono">Manage your SignalQL instance and integrations.</p>
    </header>

    <div class="space-y-8">
      <section class="p-6 bg-zinc-900/30 border border-zinc-900 rounded-xl">
        <h2 class="text-xs font-bold text-blue-500 uppercase tracking-widest mb-4">General Configuration</h2>
        <div class="space-y-4">
          <div>
            <label class="block text-[10px] text-zinc-600 uppercase mb-1">Organization ID</label>
            <input type="text" readonly class="w-full bg-zinc-950 border border-zinc-800 rounded px-3 py-2 text-xs font-mono text-zinc-400 outline-none" />
          </div>
        </div>
      </section>

      <section class="p-6 bg-zinc-900/30 border border-zinc-900 rounded-xl">
        <h2 class="text-xs font-bold text-zinc-400 uppercase tracking-widest mb-4">Integrations</h2>
        <div class="opacity-50 pointer-events-none">
          <div class="flex items-center justify-between p-3 border border-zinc-800 rounded bg-zinc-950/50">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-zinc-800 rounded flex items-center justify-center text-xs">S</div>
              <span class="text-xs font-bold uppercase">Slack Alerts</span>
            </div>
            <span class="text-[10px] bg-zinc-800 px-2 py-1 rounded">Coming Soon</span>
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>